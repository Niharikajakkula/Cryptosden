# Database
MONGODB_URI=mongodb://localhost:27017/cryptosden

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# OAuth Credentials (optional)
# For Google: Create OAuth 2.0 credentials at https://console.cloud.google.com/apis/credentials
# Add Authorized redirect URI: http://localhost:PORT/api/auth/google/callback
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# Email Configuration (for OTP and password reset)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password
SMTP_FROM=your_email@gmail.com

# API and Client URLs (must match your backend port)
API_BASE_URL=http://localhost:5000
CLIENT_URL=http://localhost:3000
REACT_APP_API_URL=http://localhost:5000

# Server Configuration
PORT=5000
NODE_ENV=development

# External APIs
COINGECKO_API_KEY=your_coingecko_api_key (optional for higher rate limits)